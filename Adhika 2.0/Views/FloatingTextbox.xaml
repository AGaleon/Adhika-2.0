<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Adhika.FloatingTextbox"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
             Title="FloatingTextbox">
    <VerticalStackLayout HeightRequest="330" WidthRequest="300" BackgroundColor="Transparent">
        <Frame Padding="5" HeightRequest="330" CornerRadius="20">
            <StackLayout>
                <Editor x:Name="editor" Margin="10"
        Placeholder="Enter your Text here"
        HeightRequest="250"
        ></Editor>
                <Button Text="Done" WidthRequest="200" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</mopups:PopupPage>